<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/coupon_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:inputType="none"
                android:maxLines="2"
                android:text="Upto 40% Off* on Latest Smartphone Accessories, Power Banks, Headphones and more"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coupon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coupon_title"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:inputType="none"
                android:lineSpacingExtra="6dp"
                android:maxLines="5"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deal_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coupon_desc"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/open_sans"
                android:padding="16dp"
                android:text="Get Deal"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="24dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>