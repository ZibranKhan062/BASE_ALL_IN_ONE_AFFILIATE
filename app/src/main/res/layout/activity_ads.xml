<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Network Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ad Network Selection"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <Switch
                        android:id="@+id/networkSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use AdMob Ads"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AdMob IDs Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/admobCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp">

                <!-- Previous AdMob content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AdMob IDs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- App ID -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/appIDLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/appID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="App ID"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Banner ID -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bannerIDLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bannerID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Banner Ad ID"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Interstitial ID -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/interstitialIDLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/interstitialID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Interstitial Ad ID"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Native Ad ID -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nativeIDLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nativeID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Native Ad ID"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/updateAdmobButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update AdMob IDs"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Facebook IDs Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/facebookCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook Ad IDs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Facebook Banner ID -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fbBannerIDLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fbBannerID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Facebook Banner ID"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Facebook Interstitial ID -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fbInterstitialIDLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fbInterstitialID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Facebook Interstitial ID"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/updateFacebookButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Facebook IDs"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>